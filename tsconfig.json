{
    "compilerOptions": {
        "lib": ["ES2019"],
        "module": "commonjs",
        "target": "ES2019",
        "baseUrl": "./",
        "outDir": "./dist",
        "preserveConstEnums": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "allowJs": true,
        "paths": {
            "~lib/*": ["src/lib/*"],
            "~app/*": ["src/app/*"],
            "~app": ["src/app"],
            "~config": ["src/config"],
        },
        "resolveJsonModule": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.json",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules"
    ]
}